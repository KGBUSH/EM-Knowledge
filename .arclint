{
  "exclude": [
    "(^docs/images/)",
    "(^vendor/)"
  ],
  "linters": {
    "pep8": {
      "type": "pep8",
      "include": "(\\.py$)"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "text-without-length": {
      "type": "text",
      "text.max-line-length": 200,
      "include": "(\\.(md|txt|json)$)"
    }
  }
}
